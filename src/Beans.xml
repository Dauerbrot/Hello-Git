<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="helloworld" class="com.tutorial.HelloWorld" scope="prototype">
       <property name="message" value="Hello World!"/>
       <property name="number" value="15"/>
   </bean>
   
   <bean id="hellow" class="com.tutorial.HelloWorld" scope="singleton">
   		<property name="message" value="Here i am"/>
   		<property name="number" value="23" />
   </bean>


	<bean id="initdestroy" class="com.tutorial.HelloInitDestroy" init-method="init">
	</bean>
	
	<bean id="spellcheckerModule" class="com.tutorial.spellChecker.spellCheckerModule" scope="singleton">
	</bean>
</beans>